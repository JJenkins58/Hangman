<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_column="0"
            android:gravity="center"
            android:fontFamily="@font/onepiece"
            android:text="Hangmanime"
            android:textStyle="italic"
            android:textSize="45dp"
            android:textColor="@color/black"/>
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/txtWordToBeGuessed"
            android:layout_width="364dp"
            android:layout_height="218dp"
            android:layout_column="0"
            android:gravity="center"
            android:maxWidth="150dp"
            android:text="Anime Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40dp"
            android:fontFamily="@font/onepiece"/>
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/onepiece">

        <EditText
            android:id="@+id/edtInput"
            android:layout_column="0"
            android:gravity="center"
            android:maxLength="1"
            android:hint="Input one letter"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textColorHint="@color/colorSecondary"
            android:fontFamily="@font/onepiece"/>
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/txtLettersTried"
            android:layout_column="0"
            android:gravity="center"
            android:text="Letters Used:"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/onepiece"/>
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:gravity="center"
            android:text=" X X X X X"
            android:id="@+id/txtTriesLeft"
            android:layout_column="0"
            android:textSize="30dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/onepiece"/>
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnReset"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:text="Reset"
            android:textSize="30dp"
            android:background="@color/colorSecondary"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/onepiece"/>
    </TableRow>

</TableLayout>